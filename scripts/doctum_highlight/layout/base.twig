{# pages/class.twig #}

{% extends 'default/layout/base.twig' %}

{% block head %}

    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.9.0/themes/prism.min.css"/>
    <style>
        pre { padding: 0px; }
        .token.variable {
            color: #660000;
        }
        .token.inserted, .token.number {
            color: #0000FF;
        }
        .token.keyword, .token.boolean {
            color: #000080;
        }
        .token.string {
            color: #008000;
        }

        .token.function {
            color: #000;
        }

        .token {
            background: inherit !important;
        }
        :not(pre) > code[class*="language-"],
        pre[class*="language-"] {
            background: inherit;
        }

        h3 > code[class*=language-] .token.function {
            font-weight: bold;
        }

    </style>
{% endblock %}

{% block html %}
    <body id="{% block body_class '' %}" data-name="{% block page_id '' %}" data-root-path="{{ root_path }}">
    {% block content '' %}
    <script src="https://rokka.io/client-php-api/prism.js"></script>
    </body>
{% endblock %}

